<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@color/transparent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <View
                android:layout_width="2dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="75dp"
                android:background="@color/white"
                android:layout_height="50dp"/>
            <View
                android:layout_width="2dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="75dp"
                android:background="@color/white"
                android:layout_height="50dp"/>
        </RelativeLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/circle_grey"/>
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/circle_grey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="10dp"
                        android:text="会员介绍奖励"
                        android:textColor="@color/color_dl_black" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_bg_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:text="很荣幸成为我俱乐部会员：
    推荐您的亲友成为我俱乐部会员，每推荐成功一位亲友，您都将获得我俱乐部的积分奖励，兑换指定奖品，他（她）可以是您的亲人、朋友、同事、爱人，您送出去的是一份选择健康的机会"
                    android:textColor="#333"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_commit"
                    android:background="@drawable/img_btn_bg_sell_card"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:text="确认"
                    android:textSize="14sp" />
            </LinearLayout>


        </android.support.v7.widget.CardView>
<View
    android:layout_width="2dp"
    android:layout_height="30dp"
    android:layout_gravity="center"
    android:background="#A8AAAF"/>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_close1"
            android:layout_gravity="center"
            />
    </LinearLayout>

</RelativeLayout>