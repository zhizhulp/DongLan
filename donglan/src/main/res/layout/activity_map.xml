<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/map_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_white"
        >
        <ImageView
            android:id="@+id/back_gray"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/img_back_gray"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            />
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                >
                <ImageView
                    android:id="@+id/img_walk_grey"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:src="@drawable/walk_grey"
                    android:layout_above="@+id/tv_walk"
                    android:layout_centerHorizontal="true"
                    />
                <ImageView
                    android:id="@+id/img_walk_blue"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:src="@drawable/walk_blue"
                    android:layout_above="@+id/tv_walk"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tv_walk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:text="暂无路线"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
                <ImageView
                    android:id="@+id/bus_gray"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:src="@drawable/bus_gray"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/tv_bus"
                    />
                <ImageView
                    android:id="@+id/bus_blue"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:src="@drawable/bus_blue"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/tv_bus"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tv_bus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无路线"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                >
                <ImageView
                    android:id="@+id/car_gray"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/car_gray"
                    android:layout_above="@+id/tv_car"
                    />
                <ImageView
                    android:id="@+id/car_blue"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/car_blue"
                    android:layout_above="@+id/tv_car"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tv_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无路线"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    />


            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>


    <com.baidu.mapapi.map.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/map_title"
        android:clickable="true"
        android:layout_above="@+id/tv_station"
        >
    </com.baidu.mapapi.map.MapView>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_daohang"
            android:layout_width="wrap_content"
            android:background="@drawable/btn_bg_selector"
            android:layout_height="wrap_content"

            android:text="导航"
            android:textSize="18sp"
            android:textColor="#fff"
            />
    </FrameLayout>
    <TextView
        android:id="@+id/tv_station"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="9号线"
        android:gravity="center"
        android:visibility="gone"
        android:singleLine="true"
        android:background="@color/color_white"
        />


</RelativeLayout>