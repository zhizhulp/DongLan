<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.cn.danceland.myapplication.view.DongLanTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="设置密码"></com.cn.danceland.myapplication.view.DongLanTitleView>



    <LinearLayout
        android:id="@+id/ll_miman"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@id/ll_getsms"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_bg_phone"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="密码"
            android:textColor="#6d819c"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_password"
            style="@style/EtStyle"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:hint="请输入密码（6-20位）"
            android:inputType="textPassword" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@id/ll_miman"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_bg_phone"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="确认密码"
            android:textColor="#6d819c"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_confirm_password"
            style="@style/EtStyle"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:hint="请再次输入密码"
            android:inputType="textPassword" />


    </LinearLayout>

    <com.cn.danceland.myapplication.view.CommitButton
        android:id="@+id/dlbtn_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="完成"
        android:layout_marginTop="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="172dp"
        ></com.cn.danceland.myapplication.view.CommitButton>



</LinearLayout>
