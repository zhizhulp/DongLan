<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray23"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.cn.danceland.myapplication.view.DongLanTitleView
            android:id="@+id/dl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleText="业绩展板" />

        <ImageView
            android:id="@+id/iv_rili"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:src="@drawable/img_rili" />
    </FrameLayout>


    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/magic_indicator"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="#fff" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_zongyeji"
            android:background="@drawable/bg_dl_yellow"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:gravity="center_vertical|right"
            android:paddingRight="16dp"
            android:text="飒飒大了会计师老带劲了"
            android:layout_height="44dp" />

</LinearLayout>
