<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/color_bg_mianlayout"
    >

    <RelativeLayout
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fitness_circleimage"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:id="@+id/fitness_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/fitness_circleimage"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:text="叶良辰"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/fitness_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/fitness_circleimage"
            android:layout_alignBottom="@+id/fitness_circleimage"
            android:text="10w粉丝"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"
            />

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/switch_btn_bg"
            android:layout_marginRight="15dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
                <ImageView
                    android:id="@+id/jia"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/publish_status"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/jia"
                    android:paddingLeft="2dp"
                    android:text="关注"
                    android:textSize="14sp"
                    />

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fitness_img"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@+id/item_title"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <ImageView
            android:id="@+id/im1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/im2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:id="@+id/im3"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/color_white"
        android:layout_below="@+id/fitness_img"
        />


</RelativeLayout>