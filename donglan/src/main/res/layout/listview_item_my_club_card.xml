<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/item_layout_cv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.cn.danceland.myapplication.view.RoundImageView
                android:id="@+id/iv_card"
                android:layout_width="167dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/sijiao_card"
                roundiv:left_bottom_radius="6dp"
                roundiv:left_top_radius="6dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_cardname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="钻石年卡"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_cardtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_cardname"
                    android:layout_marginTop="5dp"
                    android:text="计次卡"
                    android:textColor="#333333"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="次数：100次"
                    android:textColor="#444444"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="时间："
                    android:maxLines="1"
                    android:textColor="#444444"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="卡状态："
                    android:textColor="#444444"
                    android:textSize="12sp" />
                <!--<TextView-->
                <!--android:id="@+id/tv_order_name"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:textColor="#444444"-->
                <!--android:textSize="14sp"-->
                <!--android:layout_height="wrap_content" />-->
                <!--<TextView-->
                <!--android:id="@+id/tv_phone"-->
                <!--android:textColor="#444444"-->
                <!--android:textSize="14sp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->

            </LinearLayout>

            <Button
                android:id="@+id/btn_commit"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:background="@drawable/btn_shade_pink_bg"
                android:text="扫码入场"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

