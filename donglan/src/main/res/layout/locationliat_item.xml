<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/re_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/location_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:text="无定位信息"
            android:textColor="@color/colorGray21"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/location_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="16dp"
            android:src="@drawable/location"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:id="@+id/location_item_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/re_location"
        android:background="@color/home_menu_bg_color" />
</RelativeLayout>