    <FrameLayout
        android:id="@+id/fl_title"
        android:layout_width="300dp"
        android:layout_height="187dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <com.cn.danceland.myapplication.view.XCRoundRectImageView
            android:id="@+id/card_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sijiao_card"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="德宝店"
            android:textSize="14sp"
            android:textColor="@color/white"
            />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="储值卡"
        android:textColor="@color/color_white"
        android:textSize="14sp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginTop="10dp"
>

        <TextView
            android:id="@+id/tv_jinetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额:"
            android:textSize="14sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/card_jine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:layout_toRightOf="@+id/tv_jinetv"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>





    </FrameLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/fl_title"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_chongzhi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            style="@style/BtnCommitStyle"
            android:layout_marginLeft="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我要充值"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_xiaofeijilu"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/BtnCommitStyle"
            android:layout_marginRight="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="消费记录"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>