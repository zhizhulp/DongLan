<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_zhubiaoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="16dp"
                android:maxLines="1"
                android:text="主标题"
                android:textColor="@color/colorGray21"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_fubiaoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/img_01"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/tv_zhubiaoti"
                android:layout_toRightOf="@+id/tv_zhubiaoti"
                android:gravity="bottom"
                android:maxLines="1"
                android:text="副标题"
                android:textColor="@color/colorGray22"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/img_01"
                android:layout_width="match_parent"
                android:layout_height="361dp"
                android:layout_below="@+id/tv_zhubiaoti"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_01"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rl_buzhou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_01"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="步骤:"
                    android:textColor="@color/colorGray21"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_buzhou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_buzhou"
                    android:layout_marginLeft="16dp"
                    android:text="xxxxxxx"
                    android:textColor="@color/colorGray21"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/rl_zhuyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_buzhou"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="注意:"
                    android:textColor="@color/colorGray21"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_zhuyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_zhuyi"
                    android:layout_marginLeft="16dp"
                    android:text="xxxxxx"
                    android:textColor="@color/colorGray21"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/rl_dongzuoxiangjie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_zhuyi"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="动作详解:"
                    android:textColor="@color/colorGray21"
                    android:textSize="16sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_img"
                android:layout_width="match_parent"
                android:layout_height="157dp"
                android:layout_below="@+id/detail_layout"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_02"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/img_03"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/img_04"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_img"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_buzhou_01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第一步"
                    android:textColor="@color/colorGray26"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_buzhou_02"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第二步"
                    android:textColor="@color/colorGray26"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_buzhou_03"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第三步"
                    android:textColor="@color/colorGray26"
                    android:textSize="16dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/rl_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_tv"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="测试结果:"
                android:textColor="@color/colorGray21"
                android:textSize="16sp" />
            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="vertical">-->
            <!---->
            <!--</LinearLayout>-->
            <RadioGroup
                android:id="@+id/rg_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_result"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_result_01"
                    style="@style/DLRoundCheckBoxTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="9dp"
                    android:text="较差"
                    android:textColor="@color/colorGray21"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rb_result_02"
                    style="@style/DLRoundCheckBoxTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="9dp"
                    android:text="一般"
                    android:textColor="@color/colorGray21"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rb_result_03"
                    style="@style/DLRoundCheckBoxTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="9dp"
                    android:text="良好"
                    android:textColor="@color/colorGray21"
                    android:textSize="12sp" />

            </RadioGroup>

            <LinearLayout
                android:id="@+id/bt_next_layout"
                style="@style/BtnCommitStyle1"
                android:layout_width="327dp"
                android:layout_below="@+id/rg_result"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bt_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="下一步"
                    android:textColor="#fff"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>