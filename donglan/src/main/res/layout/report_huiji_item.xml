<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="80dp"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/img_touxiang_layout"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <com.cn.danceland.myapplication.view.XCRoundRectImageView
            android:id="@+id/img_touxiang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/img_avatar1" />

        <ImageView
            android:id="@+id/img_touxiang_stroke_bg"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:background="@drawable/stroke_bg"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_touxiang_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxEms="4"
        android:maxLines="1"
        android:text="哈哈哈哈"
        android:textColor="@color/colorGray22"
        android:textSize="12sp" />

</RelativeLayout>