<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_below="@+id/timetable_rl"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="12dp"
            android:layout_height="84dp"
            android:background="@color/colorGray28"
            android:paddingBottom="2dp">

            <com.cn.danceland.myapplication.view.VerticleTextView
                android:id="@+id/time_rtv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="left"
                android:singleLine="true"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </RelativeLayout>

        <com.cn.danceland.myapplication.utils.CustomGridView
            android:id="@+id/gv_timetable"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:layout_below="@+id/timetable_rl"
            android:numColumns="7" />

    </LinearLayout>
</RelativeLayout>